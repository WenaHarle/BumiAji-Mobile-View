<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_latest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/photoAtas"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="Photo Atas"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/photoSamping"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="Photo Samping"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:stretchColumns="1"
        android:background="@drawable/border"
        >

        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="ID"
                android:padding="8dp" />
            <TextView
                android:id="@+id/idText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Grade"
                android:padding="8dp" />
            <TextView
                android:id="@+id/gradeText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Berat"
                android:padding="8dp" />
            <TextView
                android:id="@+id/beratText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Panjang"
                android:padding="8dp" />
            <TextView
                android:id="@+id/panjangText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Width"
                android:padding="8dp" />
            <TextView
                android:id="@+id/lebarText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Height"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tinggiText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Timestamp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/timestampText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Machine ID"
                android:padding="8dp" />
            <TextView
                android:id="@+id/machineIdText"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Time Update"
                android:padding="8dp" />
            <TextView
                android:id="@+id/timeUpdateText"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>
</FrameLayout>
